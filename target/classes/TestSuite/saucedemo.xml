<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="SauceDemo Suite" parallel="tests" thread-count="3">
    <listeners>
        <listener class-name="utils.ExtentReportListener" />
    </listeners>

    <test name="TestOnChrome" group-by-instances="true">
        <parameter name="browser" value="Chrome"></parameter>
        <classes>
            <class name="test.SauceDemoLoginPageTest">
                <methods>

                    <include name="invalidLogin"/>
                    <include name="validLogin"/>
                    <include name="checkInventoryItemTest"/>
                    <include name="checkAddToCartButtonTest"/>
                    <include name="logoutTest"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>
